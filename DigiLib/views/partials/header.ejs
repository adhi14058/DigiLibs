                <div class="ui  button">
                    <a href='/'><i style="font-size:1.5em;" class="book icon"></i>DiGiLiBs</a>
                </div>
                
            </div>
            <div class="right menu">
            <div class="item pad">
                    <a class="ui inverted mini yellow button" href="/digiSearch">Search</a>
                </div>
            <% if(userLoggedIn) {%>
            <% if(userLoggedIn.username=="admin") {%>
            <div class="item pad">
            <a href='/digiAdmin' class="ui inverted mini red button">welcome admin</a>
        </div>
            <%}%>
            <% if(userLoggedIn.username=="issuer") {%>
            <div class="item pad">
            <a class="ui inverted mini red button">welcome Issuer</a>
        </div>
            <%}%>
            <% if(userLoggedIn.student) {%>
            <div class="item pad">
            <a class="ui inverted mini red button" href="/digiStudentProfile/<%= loggedInStudentId %>">welcome <%=loggedInStudent%></a>
        </div>
            <%}%>
            <% if(userLoggedIn.teacher) {%>
            <div class="item pad">
            <a class="ui inverted mini red button" href="/digiTeacherProfile/<%= loggedInTeacherId %>">welcome <%=loggedInTeacher%></a>
            
        </div>
            <%}%>
                <%}%>
                <% if(userLoggedIn && userLoggedIn.username=="issuer") {%>
                <div class="item pad">
                    <a class="ui inverted mini blue button" href="/digiIssuer/issue/Credentials">GT-BOOKS</a>
                </div>
                <div class="item pad">
                    <a class="ui inverted mini blue button" href="/digiIssuer/reserve/Credentials">RESERVED-BOOKS</a>
                </div>
                <%}%>
                <% if(!userLoggedIn) {%>
                <div class="item pad">
                  <a class="ui inverted mini orange button " href="/login">LOGIN</a>
                </div>
                <%} else {%>
                <div class="item pad">
                    <a class="ui inverted mini green button" href="/logout">LOGOUT</a>
                </div>
                <%}%>

            </div>
