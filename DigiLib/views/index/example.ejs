<body>
    <div class="ui inverted stackable big menu">
        <div class=" item ui ">
            <div class="ui inverted button">
                <i style="font-size:1.5em;" class="book icon"></i>DiGiLiBs
            </div>
        </div>
        <div class="right menu">
            <div class="item pad">
                <div class="ui inverted mini red button">welcome Adhi</div>
            </div>
            <div class="item pad">
                <div onclick="c()" class="ui inverted mini blue button">GT-Books</div>
            </div>
            <div class="item pad">
                <div class="ui inverted mini orange button ">LOGIN</div>
            </div>
            <div class="item pad">
                <div class="ui inverted mini green button">LOGOUT</div>
            </div>

        </div>
    </div>






    <div style="margin:10px auto; text-align: center">
        <div class="ui massive breadcrumb">
            <button style="padding:10px" class="section ui inverted blue button huge disabled">Get Roll_Number</button>
            <i class="right chevron icon divider"></i>
            <button style="padding:10px" class="section ui  red button huge ">Get Roll_Number</button>
        </div>

    </div>




    <div style="width:400px; margin-bottom: 40px;" class="ui centered card">
        <div class="image">
            <img src="https://images.all-free-download.com/images/graphiclarge/student_and_education_logo_free_download_6820451.jpg">
        </div>
        <div class="content ui inverted">
            <h3 class=" ui centered huge blue header"><%= st.St_name %></h3>
            <span class=" ui medium black header">Roll Number:&ensp;&ensp;&ensp;&ensp;<%= st.Roll_no %></span>
            <span class=" ui medium black header">Email
                Id:&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;<%= st.St_email %></span>
            <span class=" ui medium black header">Phone Number:&ensp;&ensp;<%= st.St_phone_no %></span>
        </div>
    </div>




    <form action="/bookissue/<%=st._id%>"method ="POST">

            <div style="border:3px solid black;  background: linear-gradient(to right,#68c1d1  0%,#e4675f  100%);" class="ui black segment">
                    <h1 class="ui huge centered  header"> ISSUE BOOKS</h1>
                    <div style=" width:60%; margin:0 auto;" class="ui inverted form">
                      <div class="two fields">
                        <div style="width:100%"  class=" ui centered field">
                                <div class="ui action input">
                                        <!-- <input type="text" placeholder="Search..."> -->
                                        <div style="width:100%"  class="ui form">
                                                <div class="field">
                                                <input style="width:100%;" list="identification_numbers" placeholder="identification number"  name="unique_id" />
                                                  <datalist id="identification_numbers">
                                                                            
                                                     <% books.forEach(function(book){ %> 
                                                    <option value="<%=book.Identification_no%>"><%=book.Identification_no%></option>  
                                                     <%}) %>  
                                                  </datalist>
                                                </div>
                                              </div>
                                        <button type="sumbit" class="ui button large violet">Search</button>
                                </div>
                        </div>
                      </div>
                    </div>
                    
                        
                  </div>
    </form>
    <div style="width:400px; margin-bottom: 40px;" class="ui centered card">
        <div class="image">
            <img src="<% if (step != 2){ %> https://cdn4.vectorstock.com/i/1000x1000/71/28/logo-girl-reading-a-book-vector-4227128.jpg <%}else{%> <%=bookref1.Image%>   <%}%>" alt="">
        </div>
        <div class="content ui inverted">
            <h3 class=" ui centered huge blue header">Book Name</h3> 
            <span class=" ui medium black header">ISBN:&ensp;&ensp;&ensp;&ensp;&ensp;&ensp;<% if (step != 2){ %>Book_ISBN <%}else{%> <%=bookref2.ISBN%>   <%}%></span>
            <span class=" ui medium black header">Book_id:&ensp;&ensp;&ensp;<% if (step != 2){ %>Book_ID<%}else{%> <%= bookref2.Book_id %> <%}%></span>
            <span class=" ui medium black header">Author:&ensp;&ensp;&ensp;&ensp;<% if (step != 2){ %>Book_Author<%}else{%> <%=bookref1.Author_name %>  <%}%></span>
            <span class=" ui medium black header">Publisher:&ensp;&ensp;<% if (step != 2){ %>Book_Publisher<%}else{%> <%=bookref1.Publisher_name %>  <%}%></span>
        </div>
        <form style='text-align: center;' <% if (step == 2){ %>  action="/bookissue/<%=st._id%>/<%=bookref1._id%>/<%=bookref2._id%>" method="post"  <%}%>  >
                <button style="margin:0 auto;" type="sumbit" class=" <% if (step != 2){ %>disabled <%}%> ui centered button large violet">Give Him</button>
        </form>
    </div>

    


    <div style="   width:70%; margin: 80px auto;">
        <h1 class="ui huge centered  header">BOOKS TAKEN</h1>
        <div class="cards">
            <div class="ui two column grid">
                <% if( st.BorrowedBooks.length == 0){ %>
                <% for(i=1;i<=1;i++){%>
                <div class="column">
                    <div class="ui fluid card lol">
                        <div class="image">
                            <img style="height:400px;" src="http://codex.cs.yale.edu/avi/os-book/OSE1/images/os8e-cover.jpg">
                        </div>
                        <div class="content">
                            <a class="header">No Book Borrowed</a>
                            <p></p>
                            <div style="margin:10px auto; text-align:center;" class="ui buttons">
                                <form action="">
                                    <button class="ui inverted green button disabled">Return</button>
                                </form>

                                <form action="">
                                    <button class="ui blue inverted button disabled">ReIssue</button>
                                </form>

                                <form action="">
                                    <button class="ui red inverted button disabled">LostIt</button>
                                </form>
                                <form action="">
                                    <button class="ui purple inverted button disabled">Show</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
                <%} else { var j=0%>
                    <%st.BorrowedBooks.forEach(function(book){%>
                        <div class="column">
                                <div class="ui fluid card lol">
                                    <div class="image">
                                           
                                        <img style="height:400px;" src="<%=st.BorrowedBooks1[j++].Image%>">
                                    </div>
                                    <div class="content">
                                        <a class="header"><%=book.Book_id%></a>
                                        <p></p>
                                        <div style="margin:10px auto; text-align:center;" class="ui buttons">
                                            <form action="">
                                                <button class="ui inverted green button">Return</button>
                                            </form>
            
                                            <form action="">
                                                <button class="ui blue inverted button ">ReIssue</button>
                                            </form>
            
                                            <form action="">
                                                <button class="ui red inverted button">LostIt</button>
                                            </form>
                                            <form action="">
                                                <button class="ui purple inverted button">Show</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    <%})%>
                <%}%>
            </div>

        </div>
    </div>



   




</body>

























<form id="ccc" action="/digiIssuer" method="POST">
